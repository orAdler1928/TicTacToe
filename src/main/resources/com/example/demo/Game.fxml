<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.GridPane?>

<GridPane fx:controller="com.example.demo.controller.GameController"
          xmlns:fx="http://javafx.com/fxml"
          alignment="center" hgap="15" vgap="15">

    <!-- Row 1 -->
    <Button fx:id="btn00" onAction="#handleButtonClick" GridPane.rowIndex="0" GridPane.columnIndex="0"
            prefWidth="100" prefHeight="100" style="-fx-font-size: 36px;" />
    <Button fx:id="btn01" onAction="#handleButtonClick" GridPane.rowIndex="0" GridPane.columnIndex="1"
            prefWidth="100" prefHeight="100" style="-fx-font-size: 36px;" />
    <Button fx:id="btn02" onAction="#handleButtonClick" GridPane.rowIndex="0" GridPane.columnIndex="2"
            prefWidth="100" prefHeight="100" style="-fx-font-size: 36px;" />

    <!-- Row 2 -->
    <Button fx:id="btn10" onAction="#handleButtonClick" GridPane.rowIndex="1" GridPane.columnIndex="0"
            prefWidth="100" prefHeight="100" style="-fx-font-size: 36px;" />
    <Button fx:id="btn11" onAction="#handleButtonClick" GridPane.rowIndex="1" GridPane.columnIndex="1"
            prefWidth="100" prefHeight="100" style="-fx-font-size: 36px;" />
    <Button fx:id="btn12" onAction="#handleButtonClick" GridPane.rowIndex="1" GridPane.columnIndex="2"
            prefWidth="100" prefHeight="100" style="-fx-font-size: 36px;" />

    <!-- Row 3 -->
    <Button fx:id="btn20" onAction="#handleButtonClick" GridPane.rowIndex="2" GridPane.columnIndex="0"
            prefWidth="100" prefHeight="100" style="-fx-font-size: 36px;" />
    <Button fx:id="btn21" onAction="#handleButtonClick" GridPane.rowIndex="2" GridPane.columnIndex="1"
            prefWidth="100" prefHeight="100" style="-fx-font-size: 36px;" />
    <Button fx:id="btn22" onAction="#handleButtonClick" GridPane.rowIndex="2" GridPane.columnIndex="2"
            prefWidth="100" prefHeight="100" style="-fx-font-size: 36px;" />

</GridPane>
